extends ../layout

block content
    h1="Page Contact"

    .container
        form#contactForm
            .form-group
                label(for='exampleInputEmail1') Name
                input#name.form-control(type='text', placeholder='Nom complet')
            .form-group
                label(for='exampleInputEmail1') Email
                input#email.form-control(type='email', aria-describedby='emailHelp', placeholder='test@test.com')
                small#emailHelp.form-text.text-muted We'll never share your email with anyone else.
            .form-group
                label(for='password') Password
                input#password.form-control(type='password', placeholder='Mot de passe')
            .form-group
                label(for='exampleInputPassword1') Message
                textarea#message.form-control(name="message", cols="30", rows="10")
            button.btn.btn-primary(type='submit') Envoyer